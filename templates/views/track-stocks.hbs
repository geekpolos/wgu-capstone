{{>header}}

<body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <span class="navbar-brand">My Stock Tracker</span>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="./">Home</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="./track-stocks">Track Stocks<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="./help">Help</a>
          </li>
        </ul>        
      </div>
    </nav>

    <main role="main" class="container-fluid">
        <div class="jumbotron jumbotron-fluid text-center rounded addBottomSpacing" id="homepage-jumbotron">
            <h1>Track Stocks</h1>
            <p class="lead">Track your stock portfolio</p>
        </div>

        <div class="row">
            <div class="col-sm" id="alertMessage">
                
                <h2>Current Stocks</h2>
                <table class="table" id="stock-table">
                    <thead>
                        <tr>
                        <th scope="col">#</th>
                        <th scope="col">Ticker</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                        <th scope="col">Value</th>
                        </tr>
                    </thead>
                    <tbody id="stock-table-body">
                        {{!-- Table content will get pulled in by track-stocks.js --}}
                    </tbody>
                    </table>
            </div>
            <div class="col-sm rounded" id="stockTickerForm">
                <h2>Update or Add New Tickers</h2>
                <form onsubmit="submitStockInformation()">
                    <div class="form-group dropdown">
                        <select class="custom-select" id="stockDropdownMenu" onchange="onDropdownChange()">
                            <option selected>Open this select menu</option>
                            <option value="add-stock">Add Stock</option>                            
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="ticker">Ticker</label>
                        <input type="text" class="form-control" id="ticker" aria-describedby="tickerHelp" placeholder="Enter ticker symbol - Aapl, Amzn Goog, Msft">
                    </div>
                    <div class="form-group">
                        <label for="quantity">Quantity</label>
                        <input type="number" class="form-control" id="quantity" placeholder="Number of stocks purchased - 1, 5, 10, 20">
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" class="form-control" id="price" placeholder="Price of individual stock - $4.50, $8.63, $10.24">
                    </div>                    
                    <button type="submit" class="btn btn-primary">Submit Information</button>
                </form>
            </div>            
        </div> 
        
    </main>

    {{>footer}}

    <script src="/js/track-stocks.js"></script>
</body>
</html>